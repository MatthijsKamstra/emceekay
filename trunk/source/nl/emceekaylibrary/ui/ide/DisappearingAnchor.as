package nl.emceekaylibrary.ui.ide {	import flash.display.Sprite;	import flash.events.Event;	import flash.utils.getQualifiedClassName;			/**	 * @author Eric-Paul Lecluse | epologee.com (c) 2008	 * 	 * This class is used for putting anchors on stage that are only of interest at authortime in 	 * the Flash IDE. It listens to the ADDED_TO_STAGE event and then removes itself at the parent.	 */	public class DisappearingAnchor extends Sprite {		public function DisappearingAnchor() {			this.addEventListener(Event.ADDED_TO_STAGE, destroyInstantly);		}				private function destroyInstantly(e:Event = null):void 		{			this.removeEventListener(Event.ADDED_TO_STAGE, destroyInstantly);			parent.removeChild(this);		}		override public function toString():String {			return getQualifiedClassName(this);		}	}}